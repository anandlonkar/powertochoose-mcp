# Environment variables for docker-compose
# Copy this file to .env and fill in your values

# Google Gemini API Key (required for agent functionality)
# Get one at: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# Allowed CORS origins (comma-separated)
ALLOWED_ORIGINS=https://dijit.tech,http://localhost:3000

# Database path (default: /app/data/powertochoose.db)
DATABASE_PATH=/app/data/powertochoose.db

# EFL and log directories
EFL_DIR=/app/data/efls
LOG_DIR=/app/data/logs

# MCP Server URL (internal network)
MCP_SERVER_URL=http://mcp-server:8080/sse
